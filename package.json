{
  "name": "performance-dashboard",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build && npm run copy-worker",
    "build:vercel": "next build && npm run copy-worker",
    "copy-worker": "mkdir -p public/workers && [ -d src/workers ] && cp -r src/workers/*.worker.js public/workers/ || echo 'No worker files to copy'",
    "prebuild": "npm run copy-worker",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "analyze": "ANALYZE=true next build",
    "analyze:server": "ANALYZE=server next build",
    "analyze:browser": "ANALYZE=browser next build",
    "postinstall": "npm run copy-worker"
  },
  "dependencies": {
    "@types/node": "^20.0.0",
    "clsx": "^2.0.0",
    "date-fns": "^2.30.0",
    "next": "^14.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^5.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@cypress/webpack-dev-server": "^5.1.5",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.14",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "autoprefixer": "^10.4.21",
    "babel-loader": "^10.0.0",
    "cypress": "^15.6.0",
    "eslint": "^8.0.0",
    "eslint-config-next": "14.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.18",
    "ts-jest": "^29.0.0",
    "webpack": "^5.102.1",
    "worker-loader": "^3.0.8"
  }
}
